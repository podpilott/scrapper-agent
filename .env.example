# LLM API Keys (at least one required for outreach generation)
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
DEEPSEEK_API_KEY=sk-...

# LLM Configuration
# Provider options: "openai", "anthropic", "deepseek"
LLM_PROVIDER=deepseek

# Model options:
# - OpenAI: gpt-4o-mini, gpt-4o, gpt-4-turbo
# - Anthropic: claude-3-haiku-20240307, claude-3-sonnet-20240229
# - DeepSeek: deepseek-chat (V3), deepseek-reasoner (R1)
LLM_MODEL=deepseek-chat

# SerpAPI Settings (required for Google Maps scraping)
# Get your API key at: https://serpapi.com
# Pricing: 100 free/month, then $50/5000 searches
SERPAPI_KEY=
# Fetch detailed place info (uses 2x API credits but better data quality)
SERPAPI_FETCH_DETAILS=false

# Search API Settings (for company enrichment and contact discovery)
# Tavily: AI-optimized search - 1,000 free/month, then $0.01/search
# Get API key at: https://tavily.com
TAVILY_API_KEY=

# Brave Search: Privacy-focused search - 2,000 free/month, then $0.005/search
# Get API key at: https://api.search.brave.com
BRAVE_API_KEY=

# Search provider: "tavily", "brave", or "auto" (tries Tavily first, then Brave)
SEARCH_PROVIDER=auto

# Lead Analysis Settings
ENABLE_LEAD_ANALYSIS=true
ENABLE_COMPANY_ENRICHMENT=true
ENABLE_CONTACT_DISCOVERY=true
# Describe your ideal customer for LLM qualification
IDEAL_CUSTOMER_PROFILE=

# Scraping Configuration
MAX_RESULTS_PER_QUERY=50
REQUESTS_PER_MINUTE=10

# Job Concurrency
MAX_CONCURRENT_JOBS=10
MAX_JOBS_PER_USER=1

# Logging Configuration
# Level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
LOG_LEVEL=INFO
# Format: console (colored dev output) or json (production, for log aggregation)
LOG_FORMAT=console

# Scoring
MIN_SCORE_FOR_OUTREACH=50
HOT_LEAD_THRESHOLD=75
WARM_LEAD_THRESHOLD=50

# Supabase Configuration
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_JWT_SECRET=
